objectClass: device
objectClass: pwdPolicy
objectClass: pwdPolicyChecker
cn: default
pwdAttribute: userPassword
pwdMinAge: 86400
pwdMaxAge: 15552000
pwdInHistory: 24
pwdCheckQuality: 2
pwdMinLength: 14
pwdExpireWarning: 1209600
pwdGraceAuthNLimit: -1
pwdLockout: TRUE
